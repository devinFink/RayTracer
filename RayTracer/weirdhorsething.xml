<xml>
  <scene>
    <!-- Objects -->
    <object name="box">
      <translate x="0" y="0" z="12"/>
      <object type="sphere" name="WallBottom" material="wall">
        <scale x="32" y="32" z="1"/>
        <translate z="-12"/>
      </object>
      <object type="sphere" name="WallTop" material="wall">
        <scale x="32" y="32" z="1"/>
        <translate z="12"/>
      </object>
      <object type="sphere" name="WallBack" material="wall">
        <scale x="32" y="1" z="32"/>
        <translate y="20"/>
      </object>
      <object type="sphere" name="WallLeft" material="wallRed">
        <scale x="1" y="32" z="32"/>
        <translate x="-15"/>
      </object>
      <object type="sphere" name="WallRight" material="wallGreen">
        <scale x="1" y="32" z="32"/>
        <translate x="15"/>
      </object>
    </object>
    <object type="sphere" name="horseBody" material="mtl2">
      <scale x="10" y="10" z="6"/>
      <translate y="10" z="10"/>
    </object>
    <object type="sphere" name="horseNeck" material="mtl2">
      <scale x="2" y="2" z="6"/>
      <translate x="-5" y="10" z="15"/>
      <rotate angle="-15" y="1"/>
    </object>
    <object type="sphere" name="horseHead" material="mtl1">
      <scale x="5" y="5" z="2"/>
      <translate x="-6" y="10" z="18"/>
    </object>
    <object type="sphere" name="horseEarL" material="mtl2">
      <scale x="1.5" y="1.5" z="3"/>
      <translate x="-9" y="10" z="18"/>
    </object>
    <object type="sphere" name="horseEarR" material="mtl2">
      <scale x="1.5" y="1.5" z="3"/>
      <translate x="-12" y="10" z="16"/>
      <rotate angle="15" y="1"/>
    </object>
    <object type="sphere" name="horseLeg1" material="mtl1">
      <scale x="2" y="2" z="6"/>
      <translate x="-8" y="10" z="5"/>
    </object>
    <object type="sphere" name="horseLeg2" material="mtl1">
      <scale x="2" y="2" z="6"/>
      <translate x="-5" y="10" z="5"/>
    </object>
    <object type="sphere" name="horseLeg3" material="mtl1">
      <scale x="2" y="2" z="6"/>
      <translate x="5" y="10" z="5"/>
    </object>
    <object type="sphere" name="horseLeg4" material="mtl1">
      <scale x="2" y="2" z="6"/>
      <translate x="8" y="10" z="5"/>
    </object>
    <object type="sphere" name="horseTail" material="mtl2">
      <scale x="2" y="2" z="6"/>
      <translate x="13" y="10" z="1"/>
      <rotate angle="-30" y="1"/>
    </object>
    

    <!-- Materials -->
    <material type="blinn" name="wall">
      <diffuse  value="0.7" r="1" g="1" b="1"/>
      <specular value="0"/>
    </material>
    <material type="blinn" name="wallRed">
      <diffuse  r="0.8" g="0.4" b="0.4"/>
      <specular value="0"/>
    </material>
    <material type="blinn" name="wallGreen">
      <diffuse r="0.4" g="0.8" b="0.4"/>
      <specular value="0"/>
    </material>
   <material type="blinn" name="mtl1">
      <diffuse  r="0.8" g="0.2" b="0.2"/>
      <specular r="1.0" g="1.0" b="1.0" value="0.7"/>
      <glossiness value="20"/>
	  <reflection value="0.7"/>
    </material>
    <material type="blinn" name="mtl2">
      <diffuse  r="0.2" g="0.2" b="0.8"/>
      <specular r="1.0" g="1.0" b="1.0" value="0.8"/>
      <glossiness value="10"/>
	  <refraction value="0.8" index="1.52"/>
	  <absorption r="0.01" g="0.001" b="0.0001"/>
    </material>

    <!-- Lights -->
    <light type="ambient" name="ambientLight">
      <intensity value="0.1"/>
    </light>
    <light type="point" name="pointLight">
      <intensity value="1"/>
      <position x="0" y="0" z="20"/>
    </light>
  </scene>

  <camera>
    <position x="0" y="-53" z="12"/>
    <target x="0" y="0" z="12"/>
    <up x="0" y="0" z="1"/>
    <fov value="30"/>
    <width value="1280"/>
    <height value="720"/>
  </camera>
</xml>
